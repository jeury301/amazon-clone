<% layout('layout') %>

<div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="">

        <br />
        <p><strong>Name:</strong> <%= user.profile.name %> </p>
        <p><strong>Email:</strong> <%= user.email %> </p>


        <% if(user.address === "" || typeof user.address==='undefined') { %>
        <p>
          <strong>Address: </strong> <span style="color: #c8392b; font-weight: bold">You have no address</span>
        </p>
        <% } else { %>
        <p><strong>Address:</strong> <%= user.address %> </p>
        <% } %>
        <a href="/edit-profile" class="btn btn-primary">Edit Profile</a>

      </div>
      <div class="col-md-8">
          <h2 class="text-center">History</h2>
          <table class="table table-bordered table-stripped sticky-header">
              <thead>
                  <tr>
                      <th>Item's Name</th>
                      <th>Paid</th>
                  </tr>
              </thead>
              <tbody>
                  <% for(var i=0; i< user.history.length; i++) {%>
                      <tr>
                          <td><%= user.history[i].item.name %></td>
                          <td>$<%= user.history[i].paid %>.00</td>
                      </tr>
                  <% } %>
              </tbody>
          </table>
      </div>
    </div>
</div>
