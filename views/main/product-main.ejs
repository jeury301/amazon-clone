<% layout('layout') -%>
<div class="jumbotron">
  <div class="container">
    <h1> Shop Smart, Save Big! </h1>
    <p>Find your favorite Product</p>
    <!-- <p><a class="btn btn-primary btn-lg" href="/signup" role="button">Signup &raquo;</a></p> -->
  </div>
</div>

<div class="container">
  <div class="row">
    <% for (var i=0; i < products.length; i++){ %>
    <div class="col-md-4">
      <a href="/product/<%= products[i]._id %>">
        <div class="thumbnail">
          <img src="<%= products[i].image %>">
          <div class="caption">
            <h3><%= products[i].name %></h3>
            <p><%= products[i].category.name %></p>
            <p>$<%= products[i].price %></p>
          </div>
        </div>
      </a>
    </div>
    <% if ((i+1)%3===0) { %>
        </div>
        <div class="row">
    <% } %>
    <% } %>
    <div class="row">
        <div class="col-md-12">
            <ul class="pagination text-center" style="margin-left: 15px;">
                <% for(var i=1; i <= pages; i++){ %>
                    <% if (i === 1) { %>
                        <li><a href="/"><%= i%></a></li>
                    <% } else { %>
                        <li><a href="/"><%= i%></a></li>
                    <% } %>
                <% } %>
            </ul>
        </div>
    </div>
</div>
